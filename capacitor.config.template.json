{
  "appId": "{{PACKAGE_ID}}",
  "appName": "{{APP_NAME}}",
  "webDir": "dist",
  "bundledWebRuntime": false,
  "server": {
    "url": "{{WEB_URL}}",
    "cleartext": true
  },
  "android": {
    "allowMixedContent": true,
    "captureInput": true,
    "webContentsDebuggingEnabled": false
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#0f172a",
      "showSpinner": false
    }
  }
}
